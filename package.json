{
  "name": "taskflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd client && vite",
    "dev:server": "node server/server.js",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "npx vite build",
    "start": "node server/server.js",
    "start:prod": "cross-env NODE_ENV=production node server/server.js",
    "deploy": "npx prisma migrate deploy && npx prisma generate",
    "test:db": "node test-db-connection.js",
    "lint": "eslint .",
    "preview": "cd client && vite preview",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.1.1",
    "vite": "^7.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.35",
    "prisma": "^6.19.2",
    "tailwindcss": "^3.4.17"
  }
}
