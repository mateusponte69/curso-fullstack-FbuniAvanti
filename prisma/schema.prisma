
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Pode chorar aí, você não vai ser apagado
}

// Model User - Usuário do sistema
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Em produção, usar hash. No MVP, apenas mock
  name      String
  createdAt DateTime @default(now())
  tasks     Task[]
  projects  Project[]
}

// Model Project - Projeto que agrupa tarefas
model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Model Task - Tarefa individual
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("pending") // pending, completed
  projectId   Int?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}